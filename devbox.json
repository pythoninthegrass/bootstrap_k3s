{
  "packages": {
    "ansible-lint":    "latest",
    "ansible":         "latest",
    "asdf-vm":         "latest",
    "gh":              "latest",
    "git":             "latest",
    "glib":            "latest",
    "glibcLocalesUtf8": {
      "version": "latest",
      "platforms": [
        "x86_64-linux",
        "aarch64-linux"
      ]
    },
    "gnumake":         "latest",
    "go-task":         "latest",
    "skate":           "latest",
    "uv":              "latest"
  },
  "env": {
    "VENV_DIR": ".venv",
    "UV_HTTP_TIMEOUT": "90",
    "UV_COMPILE_BYTECODE": "1",
    "UV_LINK_MODE": "copy",
    "LANG": "en_US.UTF-8",
    "LC_ALL": "en_US.UTF-8",
    "LANGUAGE": "en_US.UTF-8",
    "ANSIBLE_HOST_KEY_CHECKING": "false"
  },
  "shell": {
    "init_hook": [
      "[ -d ${VENV_DIR} ] || uv venv ${VENV_DIR}",
      ". $VENV_DIR/bin/activate",
      "uv pip install -r pyproject.toml --all-extras",
      "export ANSIBLE_VAULT_PASSWORD_FILE=$(skate get ansible_vault_password)",
      "export ANSIBLE_BECOME_PASSWORD=$(skate get ansible_become_password)",
      "export SUDO_PASS=${ANSIBLE_BECOME_PASSWORD}"
    ],
    "scripts": {
      "export-reqs": "uv pip freeze | uv pip compile - -o requirements.txt",
      "install":     "uv pip install -r requirements.txt",
      "test":        "pytest",
      "venv":        "uv venv ${VENV_DIR} --allow-existing"
    }
  }
}
